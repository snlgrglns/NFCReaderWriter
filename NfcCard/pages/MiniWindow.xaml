<UserControl x:Class="NfcCard.pages.MiniWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <StackPanel HorizontalAlignment="Left" Width="140">
                    <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="No Data" Height="31" Margin="74,0,-74,0"/>
                    <Button x:Name="button1" Content="GET TAG ID" Margin="73,0,-73,0" Click="button1_Click"/>
                    <Button x:Name="button2" Content="read" Margin="73,0,-73,0" Click="button2_Click"/>
                    <TextBox x:Name="textBox1" Height="23" TextWrapping="Wrap" Margin="73,0,-73,0"/>
                    <Button x:Name="button3" Content="Write" Margin="73,0,-73,0" Click="button3_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
